{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "target": "ES2020",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist"                          /* Skip type checking all .d.ts files. */
  },
  "include": ["src/**/*"]
}
