{
  // "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": true,
    "target": "ES2020",
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "skipLibCheck": true,

    // Linting
    "strict": true,
    "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "outDir": "dist",
    "module": "commonjs",
    "esModuleInterop": true
  },
  "include": ["./*.js", "src/**/*.ts", "test/**/*.ts"]
}
